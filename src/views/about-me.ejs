<!DOCTYPE html>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../assets/styles/reset.css" />
    <link rel="stylesheet" href="../assets/styles/about-me.css" />
    <link rel="stylesheet" href="../assets/styles/header.css" />
    <title>Conte√∫do</title>
  </head>
  <body>
    <div class="header">
      <div class="header-container">
        <p class="title">Agendify</p>
        <div class="btn-box">
          <button class="btn-header">
            <img
              src="../assets/img/user.svg"
              alt="User"
              class="img-btn"
              onclick="redirectToPage('template/about-me')"
            />
          </button>
          <button class="btn-header">
            <img
              src="../assets/img/code.svg"
              alt="Techs"
              class="img-btn"
              onclick="redirectToPage('template/technology')"
            />
          </button>
          <button class="btn-header">
            <img
              src="../assets/img/about.svg"
              alt="About"
              class="img-btn"
              onclick="redirectToPage('template/about')"
            />
          </button>
          <button class="btn-header">
            <img
              src="../assets/img/home.svg"
              alt="Home"
              class="img-btn"
              onclick="redirectToPage('template')"
            />
          </button>
        </div>
      </div>
    </div>

    <div id="myModalEmail" class="modal">
      <div class="modal-content">
        <div class="header-modal">
          <h3 class="title-modal">Enviar email</h3>
          <span id="closeModalBtnEmail" class="close">&times;</span>
        </div>
        <div class="body-modal">
          <div class="box-modal">
            <label class="label-modal">Nome</label>
            <input
              type="text"
              placeholder="Digite seu nome..."
              class="input-modal"
              id="nome"
            />
            <div id="nomeError" class="error-message"></div>
          </div>
          <div class="box-modal">
            <label class="label-modal">Email</label>
            <input
              type="text"
              placeholder="Digite o seu email..."
              class="input-modal"
              id="email"
            />
            <div id="assuntoError" class="error-message"></div>
          </div>
          <div class="box-modal">
            <label class="label-modal">Assunto</label>
            <input
              type="text"
              placeholder="Digite o assunto..."
              class="input-modal"
              id="assunto"
            />
            <div id="assuntoError" class="error-message"></div>
          </div>
          <div class="box-modal">
            <label class="label-modal">Mensagem</label>
            <textarea
              type="text"
              placeholder="Digite sua Mensagem..."
              class="textarea-modal"
              id="mensagem"
            ></textarea>
            <div id="mensagemError" class="error-message"></div>
          </div>
          <button class="button-modal" onclick="enviarEmail()" id="send-email">
            Enviar
          </button>
        </div>
      </div>
    </div>

    <main>
      <div class="main-container">
        <h1>Sobre mim</h1>
        <p><%= sobreContent %></p>

        <h2>Tecnologias:</h2>

        <ul>
          <% tecnologias.forEach(function(tec) { %>
          <li><%= tec %></li>
          <% }); %>
        </ul>

        <div class="btn-contact-box">
          <a href="https://github.com/ViniciusOgawa" class="btn-contact">
            <img src="../assets/img/github.svg" alt="GitHub" class="img-btn" />
          </a>
          <button id="openModalBtnEmail" class="btn-contact">
            <img src="../assets/img/email.svg" alt="Linkedin" class="img-btn" />
          </button>
          <a
            href="https://www.linkedin.com/in/vinicius-ogawa-91311b197/"
            class="btn-contact"
          >
            <img
              src="../assets/img/linkedin.svg"
              alt="Linkedin"
              class="img-btn"
            />
          </a>
        </div>
      </div>
    </main>
  </body>

  <script src="../assets/scripts/email.js"></script>

  <script>
    function redirectToPage(page) {
      window.location.href = "/" + page;
    }
  </script>
</html>
